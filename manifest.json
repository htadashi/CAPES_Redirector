{
  "manifest_version": 3,
  "name": "CAPES Redirector",
  "version": "1.0",
  "description": "Redirect URLs to CAPES access.",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["https://ieeexplore.ieee.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "modify_url": {
      "suggested_key": {
        "default": "Ctrl+Period"
      },
      "description": "Modify URL"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": "icons/32.png",
    "default_title": "Open CAPES Portal"
  }
}